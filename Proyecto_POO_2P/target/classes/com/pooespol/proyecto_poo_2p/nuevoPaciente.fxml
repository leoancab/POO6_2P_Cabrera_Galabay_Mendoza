<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pooespol.proyecto_poo_2p.NuevoPacienteController">
    <children>
      <VBox alignment="CENTER" prefHeight="0.0" prefWidth="560.0">
         <children>
              <Label text="Nuevo Paciente" textFill="#4673db">
               <font>
                  <Font name="Arial Rounded MT Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <GridPane alignment="CENTER" hgap="20.0" prefHeight="429.0" prefWidth="560.0" vgap="20.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="330.0" minWidth="10.0" prefWidth="126.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="428.0" minWidth="10.0" prefWidth="279.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <padding>
            <Insets left="65.0" right="65.0" />
         </padding>
         <children>
            <Label alignment="CENTER_RIGHT" prefHeight="135.0" prefWidth="330.0" text="Cédula:">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="23.0" prefWidth="374.0" text="Nombres:" GridPane.rowIndex="1">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="23.0" prefWidth="398.0" text="Apellidos:" GridPane.rowIndex="2">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="24.0" prefWidth="418.0" text="Fecha nacimiento:" GridPane.rowIndex="3">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="49.0" prefWidth="359.0" text="Género:" GridPane.rowIndex="4">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="405.0" text="Cuidad:" GridPane.rowIndex="5">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="63.0" prefWidth="427.0" text="Email:" GridPane.rowIndex="6">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="63.0" prefWidth="342.0" text="Teléfono:" GridPane.rowIndex="7">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="75.0" prefWidth="388.0" text="Usuario:" GridPane.rowIndex="8">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <Label alignment="CENTER_RIGHT" prefHeight="87.0" prefWidth="431.0" text="Contraseña:" GridPane.rowIndex="9">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="txt_Cedula" prefHeight="25.0" prefWidth="175.0" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txt_Nombres" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txt_Apellidos" prefHeight="25.0" prefWidth="165.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txt_Ciudad" prefHeight="25.0" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txt_Email" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txt_Telefono" GridPane.columnIndex="1" GridPane.rowIndex="7">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
            <TextField fx:id="txt_Usuario" GridPane.columnIndex="1" GridPane.rowIndex="8">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
            <DatePicker fx:id="date" prefHeight="25.0" prefWidth="176.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="40.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <children>
                  <RadioButton fx:id="femenino" mnemonicParsing="false" text="Femenino">
                     <toggleGroup>
                        <ToggleGroup fx:id="genero" />
                     </toggleGroup>
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="masculino" mnemonicParsing="false" text="Masculino" toggleGroup="$genero">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="otros" mnemonicParsing="false" text="Otros" toggleGroup="$genero">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font></RadioButton>
               </children>
            </HBox>
            <TextField fx:id="txt_Contrasenia" GridPane.columnIndex="1" GridPane.rowIndex="9">
               <GridPane.margin>
                  <Insets right="105.0" />
               </GridPane.margin>
            </TextField>
         </children>
      </GridPane>
      <VBox fx:id="vb_Registrar" alignment="TOP_CENTER" prefHeight="75.0" prefWidth="545.0" spacing="10.0">
         <children>
              <Button fx:id="btn_Registrar" onAction="#registarPaciente" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #4673db; -fx-text-fill: white;" text="Registrar">
               <font>
                  <Font name="Arial Bold" size="14.0" />
               </font>
            </Button>
            <Label fx:id="l_mensaje" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font></Label>
         </children>
      </VBox>
    </children>
    <padding>
        <Insets left="20.0" right="20.0" top="20.0" />
    </padding>
